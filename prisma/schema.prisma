generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos com o sistema de caixa
  entradas  Entrada[]
  saidas    Saida[]
  transacoes Transacao[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo para entradas de caixa
model Entrada {
  id          String   @id @default(cuid())
  descricao   String
  valor       Float
  data        DateTime
  hora        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Modelo para saídas de caixa
model Saida {
  id          String   @id @default(cuid())
  descricao   String
  valor       Float
  data        DateTime
  hora        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Modelo para transações (cálculos de lucro)
model Transacao {
  id                    String   @id @default(cuid())
  totalTransacionado    Float
  totalTransacoesPagas  Float
  totalSaques           Float
  quantidadeTransacoes  Float
  custoAdquirente       Float
  resultadoParcial      Float
  lucroReal             Float
  dataCalculo           DateTime @default(now())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  custoPorTransacao    Float
  userId                String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}